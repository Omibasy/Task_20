<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/libs/bootstrap-grid.min.css">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Информация</title>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <a href="https://localhost:7243/" class="btn">
                    Назад
                </a>
            </div>
        </div>
        <div class="row box-info">
            <picture class="picture col-4">
                <img class="image" src="/img/no_photo.jpg" alt="фото человека">
            </picture>
            <address class="address col-8">
                <ul class="list list-reset">
                    <li class="item table__row--not-even">
                        <p class="descr">
                            ID
                        </p>
                        <p class="text text--castom">
                            @Model.Item1.ID
                        </p>
                    </li>
                    <li class="item table__row--even">
                        <p class="descr">
                            Имя
                        </p>
                        <p class="text">
                            @Model.Item1.Name
                        </p>
                    </li>
                    <li class="item table__row--not-even">
                        <p class="descr">
                            Фамилия
                        </p>
                        <p class="text">
                            @Model.Item1.Surname
                        </p>
                    </li>
                    <li class="item table__row--even">
                        <p class="descr">
                            Отчество
                        </p>
                        <p class="text">
                            @Model.Item1.Patomic
                        </p>
                    </li>
                    <li class="item table__row--not-even">
                        <p class="descr">
                            Номер телефона
                        </p>
                        <p class="text">
                            @Model.Item2.PhoneNumber
                        </p>
                    </li>
                    <li class="item table__row--even">
                        <p class="descr">
                            Адрес
                        </p>
                        <p class="text">
                            @Model.Item2.Address
                        </p>
                    </li>
                </ul>
            </address>
        </div>
        <div class="row box-additionally">
            <div class="col-12">
                <h2 class="heading">
                    Описание
                </h2>
                <p class="text text-left">
                    @Model.Item2.Description
                </p>
            </div>
        </div>
    </div>
</body>

</html>