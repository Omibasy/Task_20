<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/libs/bootstrap-grid.min.css">
    <title>Телефонная книга</title>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="title">
                    Телефонная книга
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12 ">             
                <table class="box__table">
                    <tr class="table__row table__row--one-row">
                        <th class="cell">
                            ID
                        </th>
                        <th class="cell">
                            Фамилия
                        </th>
                        <th class="cell">
                            Имя
                        </th>
                        <th class="cell">
                            Отчество
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr class="table__row table__row--not-even">
                            <td class="cell">
                                <a class="link" href="Home/Info?ID=@item.ID&Surname=@item.Surname&Name=@item.Name&Patomic=@item.Patomic">
                                    @item.ID
                                </a>
                            </td>
                            <td class="cell">
                                @item.Surname
                            </td>
                            <td class="cell">
                                @item.Name
                            </td>
                            <td class="cell">
                                @item.Patomic
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>

</body>

</html>